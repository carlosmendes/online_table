<% provide(:menu, "orders") %>

<div class="page-header">
  <%= link_to reviews_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_review_path(@review), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show review</h1>
</div>

<dl class="dl-horizontal">
  <dt>Order:</dt>
  <dd><%= link_to @review.order_id, @review.order %></dd>

  <dt>Rate:</dt>
  <dd><%= @review.rate %></dd>

  <dt>Title:</dt>
  <dd><%= @review.title %></dd>

  <dt>Description:</dt>
  <dd><%= @review.description %></dd>

  <dt>User:</dt>
  <dd><%= link_to @review.user.name, @review.user unless @review.user.nil? %></dd>

</dl>
