<% provide(:menu, "home") %>

<div class="page-header">
  <%= link_to new_order_line_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Order line
  <% end %>
  <h1>order_lines</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Order</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Value</th>
            <th>Status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @order_lines) do |order_line| %>
            <td><%= order_line.order_id %></td>
            <td><%= order_line.product_id %></td>
            <td><%= order_line.quantity %></td>
            <td><%= order_line.value %></td>
            <td><%= order_line.status %></td>
            <td><%= link_to 'Show', order_line %></td>
        <td><%= link_to 'Edit', edit_order_line_path(order_line) %></td>
        <td><%= link_to 'Destroy', order_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
