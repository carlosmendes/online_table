<% provide(:menu, "home") %>

<div class="page-header">
  <%= link_to order_lines_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_order_line_path(@order_line), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show Order Line</h1>
</div>

<dl class="dl-horizontal">
  <dt>Order</dt>
  <dd><%= link_to @order_line.order_id, @order_line.order %></dd>

  <dt>Product</dt>
  <dd><%= link_to @order_line.product.name, @order_line.product %></dd>

  <dt>Quantity</dt>
  <dd><%= @order_line.quantity %></dd>

  <dt>Amount</dt>
  <dd><%= number_to_currency(@order_line.value) %></dd>

  <dt>Status</dt>
  <dd><%= @order_line.status %></dd>

</dl>
