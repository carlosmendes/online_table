	Call Waiter
	Pay
	current.order.id
	Add Products
<% end %>

<% if manager? or waiter? %>
	<div class="section_header">Pending Requests</div>
		<div class="table-responsive" ng-app="pendingApp" ng-controller="PendingController as store">
		  <table class="table table-striped table-hover">
		    <thead>
		      <tr>
	            <th>Time</th>
	            <th>Table</th>
	            <th>Quantity</th>
	            <th>Product</th>
	            <th>Status</th>
		        <th></th>
		        <th></th>
		      </tr>
		    </thead>
		
		    <tbody>
		      <tr ng-repeat="line in store.pending">
	            <td>{{ line.created_at | date:'yyyy-MM-dd HH:mm' }}</td>
	            <td>{{ line.table.id }}</td>
	            <td>{{ line.quantity }}</td>
	            <td>{{ line.product.short_name }}</td>
	            <td>{{ line.status }}</td>
		        <td><button class="btn btn-sm" ng-click="deliver(line.id)">Deliver</button></td>
		        <td></td>
		      </tr>
		    </tbody>
		  </table>
		</div>
<% end %>
