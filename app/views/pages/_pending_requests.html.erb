	<% if manager? or waiter? %>
		<div ng-controller="PendingController as store">
			<div class="section_header">{{store.pending.length}} Pending Requests</div>
			<div class="table-responsive">
			  <table class="table table-striped table-hover">
			    <thead>
			      <tr>
		            <th>Time</th>
		            <th>Order</th>		            
		            <th>Table</th>
		            <th class="text-right">Quantity</th>
		            <th>Product</th>
		            <th>Status</th>
			        <th></th>
			      </tr>
			    </thead>
			
			    <tbody>
			      <tr ng-repeat="line in store.pending">
		            <td>{{ line.created_at | date:'yyyy-MM-dd HH:mm' }}</td>
		            <td>{{ line.order_id }}</td>		            
		            <td>{{ line.table.id }}</td>
		            <td class="text-right">{{ line.quantity }}</td>
		            <td>{{ line.product.short_name }}</td>
		            <td>{{ line.status }}</td>
			        <td>
			        	<button class="btn btn-xs" ng-click="process(line.id)" ng-if="processVisible(line.status)">Process</button>
			        	<button class="btn btn-xs" ng-click="deliver(line.id)">Deliver</button>
			        	<i class="fa fa-trash" ng-click="cancel(line.id)" confirmation-needed title="Cancel Order"></i>
			        </td>
			      </tr>
			    </tbody>
			  </table>
			</div>
		</div>
	<% end %>