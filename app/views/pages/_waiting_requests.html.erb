	<% if manager? or waiter? %>
		<div ng-controller="WaiterController as store">
			<div class="section_header">{{store.waiting_waiter.length}} Waiting Waiter</div>
			<div class="table-responsive">
			  <table class="table table-striped table-hover">
			    <thead>
			      <tr>
		            <th>Time</th>
		            <th>Order</th>		            
		            <th>Table</th>
		            <th class="text-right">Total</th>
		            <th>Status</th>
			        <th></th>
			      </tr>
			    </thead>
			
			    <tbody>
			      <tr ng-repeat="order in store.waiting_waiter">
		            <td>{{ order.updated_at | date:'yyyy-MM-dd HH:mm' }}</td>
		            <td>{{ order.id }}</td>		            
		            <td>{{ order.table.id }}</td>
		            <td class="text-right">{{ order.total | currency }}</td>
		            <td>{{ order.status }}</td>
			        <td>
			        	<button class="btn btn-xs" ng-click="processing(order.id)" >Process</button>
			        	<i class="fa fa-trash" ng-click="cancel(order.id)" confirmation-needed title="Cancel Order"></i>
			        </td>
			      </tr>
			    </tbody>
			  </table>
			</div>
			
			<div class="section_header">{{store.waiting_payment.length}} Waiting Payment</div>
			<div class="table-responsive">
			  <table class="table table-striped table-hover">
			    <thead>
			      <tr>
		            <th>Time</th>
		            <th>Order</th>		            
		            <th>Table</th>
		            <th class="text-right">Total</th>
		            <th>Status</th>
			        <th></th>
			      </tr>
			    </thead>
			
			    <tbody>
			      <tr ng-repeat="order in store.waiting_payment">
		            <td>{{ order.updated_at | date:'yyyy-MM-dd HH:mm' }}</td>
		            <td>{{ order.id }}</td>		            
		            <td>{{ order.table.id }}</td>
		            <td class="text-right">{{ order.total | currency }}</td>
		            <td>{{ order.status }}</td>
			        <td>
			        	<button class="btn btn-xs" ng-click="pay(order.id)" >Pay</button>
			        	<i class="fa fa-trash" ng-click="cancel(order.id)" confirmation-needed title="Cancel Order"></i>
			        </td>
			      </tr>
			    </tbody>
			  </table>
			</div>
		</div>
	<% end %>