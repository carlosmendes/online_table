<%# add navigation links to this file %>
	    
<li class="<%= if yield(:menu) == 'menu' then 'active' end %>">
	<%= link_to menu_path do %>
	  <i class="fa fa-folder-open"></i>
	  <span>Menu</span>
	<% end %>
</li>

<% if manager? or waiter? %>
    <li class="<%= if yield(:menu) == 'tables' then 'active' end %>">
		<%= link_to 'tables-status' do %>
		  <i class="fa fa-th"></i>
		  <span>Tables</span>
		<% end %>
    </li>
<% end %>
	  
<% if manager? %>
			        
	<li class="dropdown <%= if yield(:menu) == 'products' then ' active' end %>">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cutlery"></i> Products <span class="caret"></span></a>
	  <ul class="dropdown-menu">
	    <li><%= link_to 'List', products_path %></li>
	    <li class="divider"></li>
	    <li><%= link_to 'New Product', new_product_path %></li>
	  </ul>
	</li>
	
	<li class="dropdown <%= if yield(:menu) == 'orders' then ' active' end %>">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-truck"></i> Orders <span class="caret"></span></a>
	  <ul class="dropdown-menu">
	    <li><%= link_to 'Orders', orders_path %></li>
	    <li><%= link_to 'Reviews', reviews_path %></li>
	    <li class="divider"></li>
	    <li><%= link_to 'New Order', new_order_path %></li>
	  </ul>
	</li>
	
	<li class="dropdown <%= if yield(:menu) == 'backoffice' then ' active' end %>">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-gears"></i> Backoffice <span class="caret"></span></a>
	  <ul class="dropdown-menu">
	    <li><%= link_to 'Categories', categories_path %></li>
	    <li><%= link_to 'Sub Categories', sub_categories_path %></li>
	    <li><%= link_to 'Products', products_path %></li>
	    <li><%= link_to 'Tables', tables_path %></li>
	    <li class="divider"></li>
	    <li><%= link_to 'Users', users_path %></li>
	  </ul>
	</li>
<% end %>

<% if logged_in? %>
	<li class="dropdown">
		<a href="#" class="dropdown-toggle fa fa-user" data-toggle="dropdown">
		  Account <b class="caret"></b>
		</a>
		<ul class="dropdown-menu">
		  <li><%= link_to "Profile", current_user %></li>
		  <li><%= link_to "Last Orders", '#' %></li>
		  <li class="divider"></li>
		  <li>
		    <%= link_to "Log out", logout_path, method: "delete" %>
		  </li>
		</ul>
	</li>
<% else %>
  <li><%= link_to "Log in", login_path %></li>
<% end %>