<%= form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :short_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :short_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category_id, Category.all.map { |p| [p.name, p.id] }, {:include_blank => '-' }, class: "form-control" %>
      
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sub_category_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :sub_category_id, SubCategory.all.map { |p| [p.name, p.id] }, {:include_blank => '-' }, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :order, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :active, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
