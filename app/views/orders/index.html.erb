<% provide(:menu, "orders") %>

<div class="page-header">
  <%= link_to new_order_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Order
  <% end %>
  <h1>orders</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>Client</th>
            <th>Waiter</th>
            <th>Table</th>
            <th class="text-right">Total</th>
            <th>Status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orders) do |order| %>
            <td><%= order.id %></td>
            <td><%= link_to order.client.name, order.client unless order.client.nil? %></td>
            <td><%= link_to order.waiter.name, order.waiter unless order.waiter.nil? %></td>
            <td><%= order.table.name unless order.table.nil? %></td>
            <td class="text-right"><%= number_to_currency(order.total) %></td>
            <td><%= order.status %></td>
            <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
