<% provide(:menu, "orders") %>

<div class="page-header">
  <%= link_to orders_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_order_path(@order), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Order <%= @order.id %></h1>
</div>

<div class="row">
	<div class="col-md-4">
		<dl class="dl-vertical">
		  <dt>Client</dt>
		  <dd><%= link_to @order.client.name, @order.client %></dd>
		
		  <dt>Waiter</dt>
		  <dd><%= link_to @order.waiter.name, @order.waiter %></dd>
		</dl>
	</div>
	<div class="col-md-4">
		<dl class="dl-vertical">
		  <dt>Table</dt>
		  <dd><%= @order.table.name %></dd>
		  <dt>Status</dt>
		  <dd><%= @order.status %></dd>
		</dl>
	</div>
	<div class="col-md-4">
		<dl class="dl-vertical">
		  <dt>Total</dt>
		  <dd><h4><%= number_to_currency(@order.total) %></h4></dd>
		</dl>
	</div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Amount</th>
            <th>Status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @order.order_lines) do |order_line| %>
            <td><%= order_line.product.name %></td>
            <td><%= order_line.quantity %></td>
            <td><%= number_to_currency(order_line.value) %></td>
            <td><%= order_line.status %></td>
            <td><%= link_to 'Show', order_line %></td>
        <td><%= link_to 'Edit', edit_order_line_path(order_line) %></td>
        <td><%= link_to 'Destroy', order_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>